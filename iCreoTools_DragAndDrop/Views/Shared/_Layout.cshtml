<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - iCreoTools_DragAndDrop</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/iCreoTools_DragAndDrop.styles.css" asp-append-version="true"/>
</head>

<body class="bg-darkgray">
<header class="bd-bt bd-gold pad1r-vert bd-bt-rad15 lin-grad-l">
    <div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-darkgray box-shadow">
            <div class="container-fluid">
                <img src="~/images/logo.png" alt="logo" id="header-logo"/>
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">ImageCutter</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between"></div>
            </div>
        </nav>
    </div>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<div class="bt-lin-grad bd-top-radF"></div>

<footer class="bd-top bd-gold text-white bd-top-rad15 lin-grad-r">
    <div>
        &copy; 2025 - iCreoTools - <a class="col-blue text-wo-dec" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>