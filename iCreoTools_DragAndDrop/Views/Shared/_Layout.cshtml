<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - iCreoTools_DragAndDrop</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/iCreoTools_DragAndDrop.styles.css" asp-append-version="true"/>
</head>
<body class="bg-darkgray">
<header class="border-bottom-blue pad15-vert">
    <div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-darkgray box-shadow">
            <div class="container-fluid">
                <img src="~/images/logo.png" alt="logo" id="header-logo"/>
                <a class="navbar-brand col-blue" asp-area="" asp-controller="Home" asp-action="Index">iCreoTools</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Конвертация
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Image" asp-action="ToPng">Конвертация в PNG</a></li>
                                <li><a class="dropdown-item" asp-controller="Image" asp-action="ToJpg">Конвертация в JPG</a></li>
                                <li><a class="dropdown-item" asp-controller="Image" asp-action="ToJfif">Конвертация в JFIF</a></li>
                                <li><a class="dropdown-item" asp-controller="Image" asp-action="ToIco">Конвертация в ICO</a></li>
                                <li><a class="dropdown-item" asp-controller="Image" asp-action="ToBmp">Конвертация в BMP</a></li>
                                <li><a class="dropdown-item" asp-controller="Image" asp-action="ToSvg">Конвертация в SVG</a></li>
                                <li><a class="dropdown-item" asp-controller="Image" asp-action="ToWebp">Конвертация в WEBP</a></li>
                                <li><a class="dropdown-item" asp-controller="Image" asp-action="ToTiff">Конвертация в TIFF</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top text-white">
    <div>
        &copy; 2025 - iCreoTools_DragAndDrop - <a class="col-blue text-wo-dec" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>